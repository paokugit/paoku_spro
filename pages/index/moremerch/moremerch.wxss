.nearbyshops-box{
    width: 100%;
    height: auto;
    padding-top: 10rpx;
    background: #f8f8f8;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center
}
.nearbyshop-box{
    width: 726rpx;
    height: 220rpx;
    background: #fff;
    margin-bottom: 24rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: relative;
}
.nearbyshop-distance{
    width: auto;
    height: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 110rpx;
    right: 25rpx;
    color: #666;
    font-size: 24rpx
}
.nearbyshop-map-box{
    width: 140rpx;
    height: 30rpx;
    position: absolute;
    bottom: 15rpx;
    right: 25rpx;
    color: #666;
    font-size: 24rpx;
    display: flex;
    justify-content: space-around;
    align-items: center
}
.store-img{
    width: 168rpx;
    height: 126rpx;
    border: 1px solid #ccc;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center
}
image{
    width: 100%;
    height: 100%
}
.map-img{
    width: 24rpx;
    height: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center
}
.store-details-box{
    width: 500rpx;
    height: 126rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between
}
.storename{
    color: #333;
    font-size: 34rpx;
}
.office-hour{
    color: #666;
    font-size: 22rpx;
}
.store-address{
    color: #666;
    font-size: 22rpx;
}